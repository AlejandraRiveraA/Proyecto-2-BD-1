DELIMITER $$
create trigger before_update_alignment
	Before update ON project2.alignment
	for each row
BEGIN
	DECLARE vUser varchar(50);
    -- Find username of the person performing the update.
    select user() into vUser;
    -- Insert record into audit rows.
    insert into alignment(
    modification_date,
    modification_user)
    
    VALUES(
    sysdate(),
    vUser
    );
  
END$$
DELIMITER ;

