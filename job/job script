delimiter |
CREATE EVENT  `Statistic_save_event`
ON SCHEDULE EVERY 1 day 
starts '2019-05-29 11:00'
 
DO 
begin
  call insertStatistic();
  end |
  delimiter ;

set global event_scheduler = on; /*
correr el set luego del job para iniciar los eventos

